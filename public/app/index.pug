doctype html
html
  head
    title CPod
    meta(charset="utf-8")

    link(href="style.css", rel="stylesheet")
      
    // global requires
    script(src="js/global-requires.js")

    // polymer
    link(rel="import", href="../../node_modules/@polymer/polymer/polymer.html")
    script(src="../../node_modules/webcomponents.js/webcomponents-lite.min.js")

    // polymer components
    link(rel="import", href="../components/cbus-episode.html")
    link(rel="import", href="../components/cbus-podcast-detail-episode.html")

    // color thief
    script(src="../assets/color-thief/color-thief.min.js")

    // noty
    script(src="../assets/noty/jquery.noty.packaged.min.js")
    script(src="../assets/noty/themes/material.js")
    
    // StackBlur
    script(src="../assets/StackBlur/StackBlur-modified.js")
  body
    header
      .logo
      nav.header_nav
        a.material-icons.md-36(data-target="stream", title="Home") home
        a.material-icons.md-36(data-target="queue", title="Queue") queue_music
        a.material-icons.md-36(data-target="podcasts", title="Subscriptions") video_library
        a.material-icons.md-36(data-target="explore", title="Explore") explore
        a.material-icons.md-36(data-target="settings", title="Settings") settings
      .header_actions
        button.button.header_action.header_action--refresh-episodes.material-icons(data-scope="stream") refresh

    .content-container
      section.content#stream
        .filters
          select.filter(value="any", name="length")
            option(value="any") Any length
            option(value="60") <1 hr
            option(value="30") <30 mins
            option(value="20") <20 mins
            option(value="15") <15 mins
            option(value="10") <10 mins
            option(value="5") <5 mins
          select.filter(value="any", name="date")
            option(value="any") Any date
            option(value="31") Past month
            option(value="7") Past week
            option(value="1") Past day
          select.filter(value="any", name="offline")
            option(value="any") Any download status
            option(value="true") Downloaded only
          select.filter(value="any", name="progress")
            option(value="any") Any play progress
            option(value="partial") Started
            option(value="finished") Finished
        ol.list.list--episodes
      section.content#queue
        h2 Queue
        ol.list.list--queue
      section.content#podcasts
        h2 Subscriptions
        .podcasts_feeds-container
          .podcasts_feeds.podcasts_feeds--subscribed
      section.content#explore
        h2 Explore
        .explore_search
          input(type="search", placeholder="Search or enter feed URL")
        .explore_feeds-container
          .explore_feeds.explore_feeds--search-results
          .explore_feeds.explore_feeds--popular
      section.content#settings
        .settings_section
          .settings_label
            .settings_label_left
              button.material.settings_button--generate-opml Export subscriptions as OPML
          .settings_label
            .settings_label_left
              button.material.settings_button--import-opml Import subscriptions from OPML
          .settings_label
            .settings_label_left
              button.material.settings_button--update-feed-artworks Update podcast cover art
          .settings_label
            .settings_label_left
              button.material.settings_button--manage-downloaded-episodes View offline episodes directory
        .settings_section.settings_about
          p.
            CPod version #[span.settings_version-string]
          p.
            Â© 2016-2018 Zachary James Guard #[br]
            Licensed under the #[a(href="http://www.apache.org/licenses/LICENSE-2.0", target="_blank") Apache License, Version 2.0]
          p
            a.settings_licenses-link(target="_blank") View licenses
          p
            a.settings_github-link(target="_blank") View GitHub repository
          p
            a.settings_issue-reporter-link(target="_blank") Report an issue

    .podcast-detail-container
      .podcast-detail
        .podcast-detail_header
          .podcast-detail_close-button.material-icons.md-36 close
          .podcast-detail_header_image
          .podcast-detail_header_text
            .podcast-detail_header_title
            .podcast-detail_header_publisher
            .podcast-detail_header_description
          .podcast-detail_controls
            button.podcast-detail_control.podcast-detail_control--toggle-subscribe
            input(type="text", placeholder="Find an episode...").podcast-detail_control.podcast-detail_control--search
        .podcast-detail_episodes

    .player
      .player_main
        .player_top
          .player_buttons
            button.button.player_button.player_button--backward.material-icons.md-36 fast_rewind
            button.button.player_button.player_button--play.material-icons.md-36 play_arrow
            button.button.player_button.player_button--forward.material-icons.md-36 fast_forward
          .player_current
            span.player_time.player_time--now --:--
            input.player_slider(type="range", min="0", max="1000", value="0")
            span.player_time.player_time--total --:--
          .player_right-buttons
            button.button.player_button.player_button--toggles.material-icons.md-36 tune
        .player_bottom
          .black-bg
          canvas.player_video-canvas
          .player_detail
            .player_detail_header
              .player_detail_image
              .player_detail_header_right
                .player_detail_title
                .player_detail_feed-title
                .player_detail_date
            .player_detail_tabs
              .player_detail_tab.player_detail_tab--description Description
              .player_detail_tab.player_detail_tab--chapters Chapters
            .player_detail_body
              .player_detail_description
              .player_detail_chapters
        .player_waveform-container
          canvas#player_waveform
        .player_blurred-image-container
          canvas#player_blurred-image
    
    .firstrun-container
      div
        img(src="../../build/icon.svg")
        h1 Welcome to #[strong CPod]
      p.
        Thanks for trying out CPod. It is a work in progress, and there may be bugs. Please report bugs or suggest new features in #[strong Settings] > #[strong Report an issue]. Enjoy!
      div
        p Discover new podcasts in #[span.material-icons.md24 explore] #[strong Explore].
        p Listen to the newest episodes in #[span.material-icons.md24 home] #[strong Home].
        p Enjoy episodes back-to-back using the #[span.material-icons.md24 queue_music] #[strong Queue].
        p Manage subscribed podcasts in #[span.material-icons.md24 video_library] #[strong Subscriptions].
    
    .player-toggles
      label
        span Playback speed
        input.player-toggles_speed(type="number", min="0.5", max="4", step="0.1", value="1")

    .audios

    script(src="js/all.js")
